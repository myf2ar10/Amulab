<div class="container">
  <div class="row">
    <div class="col-md-12 users">
      <h4><mark>会員一覧（ID順／全て）</mark></h4>
    </div>
    <% @users.each do |user| %>
      <div class="col-md-2 users">
        <a href="<%= admin_user_path(user) %>" style="text-decoration: none; color: inherit;">
          <i class="fa-solid fa-user fa-4x admin_back"></i><br>
        </a>
        <p>会員ID：<%= user.id %><br>
        ニックネーム：<br>
        <%= link_to admin_user_path(user) do %>
        <%= user.name %><br>
        <% end %>
        電話番号：<br>
        <%= user.phone_number %></p>
        <p>状況：<%= I18n.t("user.#{user.status}") %></p>
        <!--<p><%#= link_to '退会させる', admin_user_path(user), method: :delete, data: { confirm: '本当に退会させますか？' }, class: 'btn btn-primary' %></p>-->
        <!-- 一時停止ボタン -->
        <p><%= link_to '一時停止', suspend_admin_user_path(user), method: :patch, data: { confirm: '本当に一時停止しますか？' }, class: 'btn btn-primary' %></p>
        <!-- 一時停止解除ボタン -->
        <p><%= link_to '一時停止解除', unsuspend_admin_user_path(user), method: :patch, data: { confirm: '本当に一時停止解除しますか？' }, class: 'btn btn-primary' %></p>
      </div>
    <% end %>
  </div>
</div>

