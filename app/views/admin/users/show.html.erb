<section class="wrapper flex">

  <div class="admin_user_show">
    <%= form_for(@user, url: edit_admin_user_path(@user), method: :get) do |f| %>
      <%= f.label :メールアドレス %>
      <p><%= @user.email %></p>
      <%= f.label :ニックネーム %>
      <p><%= @user.name %></p>
      <%= f.label :電話番号 %>
      <p><%= @user.phone_number %></p>
      <%= f.label :パスワード %><small>※暗号化にて</small>
      <p><%= @user.encrypted_password %></p>
      <%= link_to "戻る", admin_admin_top_path, class: "btn btn-primary" %>
      <%= link_to "編集", edit_admin_user_path(@user), class: "btn btn-primary" %>
    <% end %>
  </div>

</section>

