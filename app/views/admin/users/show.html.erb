<div class="container">
  <div class="row">
    <div class="col-md-7  img-hidden-m" style="margin-bottom: 20px;">
      <%= image_tag("knitting_is_healing_BLU.jpg", alt: "knitting is healing1", width: "100%") %>
    </div>
    <div class="col-md-5 item_show">
      <h4>会員詳細画面</h4>
      <div class="col-md-12 item_edit_form">
        <%= form_with(model: @user, url: edit_admin_user_path(@user), method: :post) do |f| %>
          <b>会員ID</b><br>
          <%= @user.id %><br>
          <b><%= f.label :メールアドレス %></b><br>
          <%= @user.email %><br>
          <b><%= f.label :ニックネーム %></b><br>
          <%= @user.name %><br>
          <b><%= f.label :電話番号 %></b><br>
          <%= @user.phone_number %><br>
          <b><%= f.label :パスワード %><small>※暗号化にて</small></b>
          <%= @user.encrypted_password %><br>
          <b><%= f.label :状況 %></b><br>
          <%= I18n.t("user.#{@user.status}") %><br>
          <%= link_to "一覧に戻る", admin_admin_top_path, class: "btn btn-primary" %>
          <%= link_to "編集", edit_admin_user_path(@user), class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
    <div>
    <% if @user_items.any? %>
        <%= @user.name %> さんが投稿した作品<br>
        <ul>
          <% @user_items.each do |item| %>
            <li><%= link_to item.name, admin_item_path(item) %></li>
          <% end %>
        </ul>
      <% else %>
        <%= @user.name %> さんはまだ作品を投稿していません。
    <% end %>
    </div>
  </div>
</div>

