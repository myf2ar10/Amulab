<section class="wrapper flex">

  <div class="admin_user_edit">

    <%#= form_with model:@user, url: url do |f| %>
      <table class="admin_user_edit_form">
        <thead>
          <tr>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%#= f.label :email, "メールアドレス" %></td>
            <td><%#= f.text_field :email %></td>
          </tr>
          <tr>
            <td><%#= f.label :name, "ニックネーム" %></td>
            <td><%#= f.text_area :name, rows: 3 %></td>
          </tr>
          <tr>
            <td><%#= f.label :phone_number, "電話番号" %></td>
            <td><%#= f.text_area :phone_number %></td>
          </tr>
          <tr>
            <td><%#= f.label :password, "パスワード" %></td>
            <td><%#= f.number_field :password %></td>
          </tr>
          <tr>
          </tr>
        </tbody>
      </table>

      <div class="flex align-center pl5">
        <%#= f.submit submit, class: "btn btn-primary" %>
      </div>
    <%# end %>
  </div>

</section>

