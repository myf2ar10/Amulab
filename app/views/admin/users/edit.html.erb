<section class="wrapper flex">

  <div class="admin_user_edit">

    <%= form_with model:@user, url: admin_user_path(@user), method: :patch do |f| %>
      <table class="admin_user_edit_form">

        <thead>
          <tr>
            <th></th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <tr>
            <td><%= f.label :email, "メールアドレス" %></td>
            <td><%= f.text_field :email %></td>
          </tr>
          <tr>
            <td><%= f.label :name, "ニックネーム" %></td>
            <td><%= f.text_field :name %></td>
          </tr>
          <tr>
            <td><%= f.label :phone_number, "電話番号" %></td>
            <td><%= f.text_field :phone_number %></td>
          </tr>
          <tr>
            <td><%= f.label :password, "パスワード" %><small>※パスワードの変更は不可。</small></td>
            <td><p><%= @user.encrypted_password %></p></td>
            <!--<td><%#= f.text_field :password %></td>-->
          </tr>
          <tr>
          </tr>
        </tbody>

      </table>

      <div class="flex align-center pl5">
        <%= link_to "詳細に戻る", admin_user_path(@user), class: "btn btn-primary" %>
        <%= f.submit "編集完了", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>

</section>

