<div class="container">
  <div class="row">
    <div class="col-md-7  img-hidden-m">
      <%= image_tag("knitting_is_healing_BLU.jpg", alt: "knitting is healing1", width: "100%") %>
    </div>
    <div class="col-md-5 item_show">
      <h4>ジャンル編集</h4>
      <div class="col-md-12 item_edit_form">
        <%= form_with model: @genre, url: admin_genre_path(@genre), method: :patch do |f| %>
          <%= f.label :name, "ジャンル名" %><br>
          <%= f.text_area :name, rows: 3 %><br>
          <%= link_to "一覧に戻る", admin_genres_path, class: "btn btn-primary" %>
          <%= f.submit "編集完了", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>

