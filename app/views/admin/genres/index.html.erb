<section class="wrapper flex">

  <div class="admin_genre_index">

<table>
    <% @genres.each do |genre| %>
  <tr>
    <td>
      <p><%= genre.name %></p>
    </td>
    <tr>
      <td>
      <%= link_to "編集", edit_admin_genre_path(genre), class: "btn btn-primary" %>
      </td>
    </tr>
    <% end %>
</table>

    <div class="mb3">
      <%= form_with model: @genre, url: admin_genres_path, method: :post do |f| %>
        <%= f.label :name, "ジャンル名:" %>
        <%= f.text_field :name %>
        <%= f.submit "登録", class: "btn btn-primary ml2" %>
      <% end %>
    </div>
    <%= paginate @genres %>

  </div>

</section>

