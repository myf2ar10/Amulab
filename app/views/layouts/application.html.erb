<!DOCTYPE html>
<html>
  <head>
    <title>Amulab</title>

    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%#= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

    <script src="https://kit.fontawesome.com/62ba821fbd.js" crossorigin="anonymous"></script>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>

  </head>

  <body>

    <header class="<%= (admin_signed_in? ? "admin_header" : "" ) %>">

      <div class="header-logo">
        <%= link_to(image_tag('Amulab.png', alt: 'Amulab', width: 300), (admin_signed_in? ? public_root_path : public_root_path), class: 'logo') %>

        <div class="header-content">
          <% if user_signed_in? %>
              <%= render 'layouts/user_header' %>
            <% elsif admin_signed_in? %>
              <%= render 'layouts/admin_header' %>
            <% else %>
              <%= render 'layouts/header' %>
          <% end %>
        </div>

      </div>
    </header>

    <main>
      <% flash.each do |message_type, message| %>
        <div class="flash-message <%= message_type %>"><%= message %></div>
      <% end %>
      <%= yield %>
    </main>

    <footer>
      <div class="footer-text">
        Contact<br>
        E-mail amulabamulab@gmail.com<br>
      Copyright Â© Amulab All Rights Reserved.
      </div>
    </footer>
  </body>

</html>