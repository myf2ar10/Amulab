<div class="container">
  <div class="row">

    <div class="col-md-7  img-hidden-m">
      <%= image_tag("knitting is healing1", alt: "knitting is healing1", width: "100%") %>
    </div>

    <div class="col-md-5">
      <h4>ログイン</h4>
      <div class="col-md-12 login_form">
        <%= form_with(model: resource, url: session_path(resource_name), local: true) do |f| %>
          <%= f.label :メールアドレス %><br>
          <small>※登録済みメールアドレスを入力してください。</small><br>
          <p><%= f.email_field :email, autofocus: true, autocomplete: "email" %></p>
          <%= f.label :パスワード %><br>
          <small>※登録済みパスワード、6文字を入力してください。</small></br>
          <p><%= f.password_field :password, autocomplete: "current-password" %></p>
          <p><%= f.submit "ログイン", class: "btn btn-primary" %>
          <%= render "public/shared/links" %></p>
          <p><%= link_to "ゲストログイン（閲覧用）", users_guest_sign_in_path, class: "btn btn-secondary", method: :post %></p>
        <% end %>
      </div>
    </div>

  </div>
</div>

