<section class="wrapper flex">

  <div class="registration_new">

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

      <%= render "public/shared/error_messages", resource: resource %>

      <table>

        <tr>
          <td>
            <%= f.label :メールアドレス %><br>
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %><br>
            <small>※実在するメールアドレスを登録してください。</small>
          </td>
        </tr>

        <tr>
          <td>
            <%= f.label :ニックネーム %><br>
            <%= f.text_field :name, autofocus: true, autocomplete: "name" %><br>
          </td>
        </tr>

        <tr>
          <td>
            <%= f.label :電話番号 %><br>
            <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number" %><br>
            <small>
              ※実在する電話番号を登録してください。<br>
              ※ハイフンは除いてください。
            </small>
          </td>
        </tr>

        <tr>
          <td>
            <%= f.label :パスワード %><br>
            <%= f.password_field :password, autocomplete: "new-password" %><br>
            <small>※6文字以上で登録してください。</small>
          </td>
        </tr>

          <tr>
            <td>
              <%= f.label :password_confirmation %><br>
              <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
            </td>
        </tr>

        <tr>
          <td>
            <%= f.submit "新規登録", class: "btn btn-primary" %>
          </td>
        </tr>

        <tr>
          <td>
            <%= render "public/shared/links" %>
          </td>
        </tr>

      </table>

    <% end %>


  </div>

</section>

