<div class="container">
  <div class="row">

    <div class="col-md-7  img-hidden-m">
      <%= image_tag("knitting is healing1", alt: "knitting is healing1", width: "100%") %>
    </div>

    <div class="col-md-5 item_show">
      <h4>投稿作品編集画面</h4>
      <div class="col-md-12 item_edit_form">
        <%= form_with model:@item, url: item_path, local: true do |f| %>
            <%= f.label :作品画像 %><br>
            <%= f.file_field :image, accept: 'image/*' %><br>
            <%= f.label :作品名 %><br>
            <%= f.text_field :name, placeholder:"作品名" %><br>
            <%= f.label :ジャンル %><br>
            <%= f.collection_select :genre_id, Genre.all, :id, :name, :prompt => "--選択してください--" %><br>
            <%= f.label :作品説明 %><br>
            <%= f.text_area :description, rows: 3, placeholder:"ここに説明文を記述します" %><br>
            <%= f.submit "編集完了", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>

  </div>
</div>

