<section class="wrapper flex">

  <div class="item_index">

  <h4>作品一覧</h4>

  <div class="items">
    <% @items.each do |item| %>
      <%= link_to item_path(item) do %>
        <%#= image_tag item.image, fallback: "no_image_BLU.jpg" %>        <!--/app/assets/images/-->
        <h5><%= item.name %></h5>
      <% end %>
      <p><%= item.created_at.strftime("%Y/%m/%d") %></p>       <!--%H:%M:%S-->
    <% end %>
  </div>

</section>

