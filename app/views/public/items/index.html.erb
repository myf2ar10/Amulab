<div class="container">
  <div class="row">
    <div class="col-md-12 new_item_title">
      <p><h3><mark>作品一覧</mark></h5></p>
    </div>
    <% @items.each do |item| %>
      <div class="col-md-3 item_list_image">
        <p><% if item.images.attached? %>
          <%= link_to item_path(item) do %>
            <%= image_tag item.images.first, style: "width: 240px; height: 240px;", class: "item_list_back" %><br>
          <% end %>
          <% if item.images.count > 1 %>
            <span class="image-count-mark"><b>★2枚以上画像があります★</b></span><br>
          <% end %>
          <% else %>
          <%= link_to item_path(item) do %>
            <%= image_tag "no_image.png", style: "width: 240px;", alt: "no_image", class: "item_list_back" %><br>
          <% end %>
        <% end %>
        作品名　：<%= link_to item_path(item) do %>
          <%= item.name %><br>
        <% end %>
        ジャンル：<%= item.genre.name %><br>
        登録日　：<%= item.created_at.strftime("%Y/%m/%d") %><br>
        登録者　：<%= item.user.name %><br></p>
      </div>
    <% end %>
  </div>
  <%= paginate @items %>
</div>

