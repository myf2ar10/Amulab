<section class="wrapper flex">

  <div class="item_index">

  <h4>作品一覧</h4>

  <div class="items">

    <table>
      <% @items.each do |item| %>

        <tr>
          <td>
            <% item.images.each_with_index do |image, index| %>
              <%= index + 1 %>
              <%= link_to item_path(item) do %>
                <% if item.images.attached? %>
                  <%= image_tag image, style: "width: #{(1..4).include?(index) ? '40px' : '100px'};" %>
                <% else %>
                  <%= image_tag "gray_round.png", style: "width: 100px;", alt: "no_image" %>
                <% end %>
              <% end %>
            <% end %>
          </td>
        </tr>


        <tr>
          <td>
            <%= link_to item_path(item) do %>
              <%= item.name %>
            <% end %>
          </td>
        </tr>

        <tr>
          <td>
            <small><%= item.genre.name %></small>
          </td>
        </tr>

        <tr>
          <td>
            <p><%= item.created_at.strftime("%Y/%m/%d") %></p>
          </td>
        </tr>

      <% end %>
    </table>
    <%= paginate @items %>

  </div>

</section>

