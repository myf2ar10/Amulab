<section class="wrapper flex">

  <div class="item_index">

  <h4>作品一覧</h4>

  <div class="items">

    <table>
      <% @items.each do |item| %>

        <tr>
          <td>
            <% item.images.each do |image| %>
              <%= link_to item_path(item) do %>
                <% if image.blob.present? %>
                  <%= image_tag image, style: "width: 100px;" %>
                <% else %>
                  <%= image_tag "no_image_BLU.jpg", style: "width: 100px;", alt: "no_image" %>
                <% end %>
              <% end %>
            <% end %>
          </td>
        </tr>

        <tr>
          <td>
            <%= link_to item_path(item) do %>
              <%= item.name %>
            <% end %>
          </td>
        </tr>

        <tr>
          <td>
            <p><%= item.created_at.strftime("%Y/%m/%d") %></p>
          </td>
        </tr>

      <% end %>
    </table>

  </div>

</section>

