<div class="col-md-12 new_item_title">
  <p><h3><mark>新着投稿作品（5作品）</mark></h5></p>
</div>
<% if user_signed_in? %>
  <% @items.order(created_at: :desc).limit(5).each do |item| %>
    <div class="col-md-4 new_item_body_image">
      <% if item.images.attached? %>
          <%= link_to item_path(item) do %>
            <%= image_tag item.images.first, style: "width: 240px; height: 240px;", class: "top_item_back" %>
          <% end %>
        <% else %>
          <%= link_to item_path(item) do %>
            <%= image_tag "no_image.png", style: "width: 240px;", alt: "no_image", class: "top_item_back" %>
          <% end %>
      <% end %>
      <div class="col-md-8 new_item_body_body">
          <%= link_to item_path(item) do %>
            <%= item.name %><br>
          <% end %>
          <%= item.genre.name %><br>
          <%= item.created_at.strftime("%Y/%m/%d") %><br>
          投稿者: <%= item.user.name %>
      </div>
    </div>
  <% end %>
  <div class="col-md-12" style="text-align: center; margin-top: 20px;">
    <%= link_to "すべての作品を見る>>", items_path, class: "btn btn-primary" %>
  </div>
<% elsif admin_signed_in? %>
  <% @items.order(created_at: :desc).limit(5).each do |item| %>
    <div class="col-md-4 new_item_body_image">
      <% if item.images.attached? %>
          <%= link_to admin_item_path(item) do %>
            <%= image_tag item.images.first, style: "width: 240px; height: 240px;", class: "top_item_back" %>
          <% end %>
        <% else %>
          <%= link_to admin_item_path(item) do %>
            <%= image_tag "no_image.png", style: "width: 240px;", alt: "no_image", class: "top_item_back" %>
          <% end %>
      <% end %>
      <div class="col-md-8 new_item_body_body">
          <%= link_to admin_item_path(item) do %>
            <%= item.name %><br>
          <% end %>
          <%= item.genre.name %><br>
          <%= item.created_at.strftime("%Y/%m/%d") %><br>
          投稿者: <%= item.user.name %>
      </div>
    </div>
  <% end %>
  <div class="col-md-12" style="text-align: center; margin-top: 20px;">
    <%= link_to "すべての作品を見る>>", admin_items_path, class: "btn btn-primary" %>
  </div>
<% end %>